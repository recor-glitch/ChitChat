services:
  chitchat-backend:
    build:
      context: ./server
      dockerfile: Dockerfile
    container_name: chitchat_backend
    environment:
      - DATABASE_URL=postgresql://postgres:password@db.ohmkgyozdbytxxlyfhot.supabase.co:5432/postgres
      - REDIS_URL=redis://redis:6379/0
    ports:
      - "4000:4000"
    depends_on:
      - db
      # - redis
  db:
    image: postgres:latest
    container_name: chitchat_db
    environment:
      - POSTGRES_USER=user
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB=chitchat
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data

volumes:
  db_data:
    driver: local
