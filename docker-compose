services:
  chitchat-backend:
    image: ghcr.io/yourusername/chitchat-backend:latest
    container_name: chitchat_backend
    environment:
      - DATABASE_URL=postgresql://user:password@db:5432/chitchat
      - REDIS_URL=redis://redis:6379/0
    ports:
      - "8000:8000"
    depends_on:
      - db
      - redis
  db:
    image: postgres:latest
    container_name: chitchat_db
    environment:
      - POSTGRES_USER=user
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB=chitchat
    volumes:
      - db_data:/var/lib/postgresql/data
  redis:
    image: redis:latest
    container_name: chitchat_redis
    ports:
      - "6379:6379"
  nginx:
    image: nginx:latest
    container_name: chitchat_nginx
    ports:
      - "80:80"
volumes:
  db_data:
    driver: local
